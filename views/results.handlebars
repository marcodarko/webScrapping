<div class="jumbotron text-center" id="hero"> 
        <h1>Mongo Scraper</h1>
        <p>The New York Times</p>
</div>
<div class="container" id="resultsBar">
  Results
</div>
<div class="container" id="tableContainer">
  <table class="table">
     
      <tbody>
      {{#if articles}}
        {{#each articles}}
         
          <tr>
            <td><a href="{{this.link}}" target="_blank">{{this.headline}}</a></td>
            <td>{{this.summary}}</td>
            <td>
            <form action="/id/{{this._id}}?_method=PUT" method="POST">
            <button type="submit" class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> SAVE</button>
            </form>
            </td>
          </tr>
          
          
        {{/each}}
        {{else}}
        <td class="text-center"> No Articles Found</td>
        {{/if}}
      </tbody>
    </table>
  </div>